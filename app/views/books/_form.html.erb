<div class="col-md-4 col-md-offset-4">
  <%= form_for(@book) do |f| %>
    <% if @book.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

        <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-inputs">

      <br>
      <%= f.text_field :name, :class => "form-control", :placeholder => "書籍名稱與版本。" %>
      
      <br>
      <%= f.text_field :price, :class => "form-control", :placeholder => "價格，請填入純數字。" %>
      
      <br>
      <%= f.select :legal, [['正版', true], ['印刷品', false]], {}, :prompt => "正版 / 印刷品", :class => "form-control" %>&nbsp;&nbsp;
      <%= f.select :original, [['原文', true], ['中文', false]], {}, :prompt => "原文 / 中文", :class => "form-control" %>
      <br>

      <br>
      <%= 
        f.text_area :description, :class => "form-control", :rows => 5, :placeholder => "物品狀況，例如：幾成新, 有無筆記等等。"
      %>

      <br>
      <%= f.label :tag_list, "選擇種類" %>
      <%= f.select :tag_list, options_for_select(ActsAsTaggableOn::Tag.all), {}, {:multiple => false, :class => "form-control"} %>

      <hr>
      <%= f.label :picture, "上傳圖片" %><br>
      <%= f.file_field :picture %>
    </div>
    
    <hr>
    <div class="form-actions">
      <%= f.submit "確定", :class => "btn btn-primary"%>
    </div>
  <% end %>
</div>
