<div class="col-md-4 col-md-offset-4">
  <%= form_for(@book) do |f| %>
    <% if @book.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

        <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-inputs">

      <br>
      <%= f.text_field :name, :class => "form-control", :placeholder => "書籍名稱與版本。" %>
      
      <br>
      <%= f.text_field :price, :class => "form-control", :placeholder => "價格，請填入純數字。" %>
      
      <br>
      <%= 
        f.text_area :description, :class => "form-control", :placeholder => "物品狀況，例如：幾成新, 有無筆記等等。" 
      %>
    
      <br>
      <%= f.text_field :course, :class => "form-control", :placeholder => "適用課程" %>

      <hr>
      <%= f.label :picture, t("上傳圖片") %><br>
      <%= f.file_field :picture %>
    </div>
    
    <hr>
    <div class="form-actions">
      <%= f.submit "確定", :class => "btn btn-primary"%>
    </div>
  <% end %>
</div>
