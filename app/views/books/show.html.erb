<div class="col-md-12">
  <div class="group">
    <% if current_user && @book.editable_by?(current_user) %>
      <%= link_to '修改', edit_book_path(@book), :class => "btn btn-primary pull-right" %>
    <% end %>
    <%= link_to 'Back', books_path, :class => "btn btn-default" %>
  </div>

  <h1>
    <%= @book.name %>
  </h1>

  <p>
    <%= image_tag(@book.picture_url, :width => 250) if @book.picture.present? %>
  </p>

  <h4>
    <%= simple_format(@book.description) %>
  </h4>

  <h4 class="lead">
    <%= number_to_currency(@book.price) %>
  </h4>

  <h4>
    <%= @book.course %>
  </h4>

  <h3>
    <%= User.find(@book.user_id).name %>
  </h3>
</div>