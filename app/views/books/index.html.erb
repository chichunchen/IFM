<div class="col-md-12">
  <div class="group">
    <%= link_to '我要賣書', new_book_path, :class => "btn btn-primary pull-right" %>
  </div>
  <table class="table table-hover">
    <thead> 
      <tr>
        <th>名稱</th>
        <th>物品狀況</th>
        <th>圖片</th>
        <th>價格</th>
        <th>適用課程</th>
        <th>上架時間</th>
        <th>賣家</th>
        <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td>
         <%= link_to book.name, book_path(book) %>
        </td>
        <td>
          <%= truncate(strip_tags(book.description), :length => 80) %>
        </td>
        <td>
          <%= link_to image_tag(book.picture_url, :width => 120), book_path(book) if book.picture.present? %>
        </td>
        <td> <%= number_to_currency(book.price) %> </td>
        <td> <%= book.course %> </td>
        <td>
          <em> <%= book.updated_at %> </em>
        </td>
        <td>
          <%= mail_to( User.find(book.user_id).email,
                     "寄信給 #{User.find(book.user_id).name}",
                      :subject => "Support question from #{User.find(book.user_id).name}",
                      :encode => "javascript" ) %>
          <br><br>
          <%= link_to( "FB #{User.find(book.user_id).name}", '#' ) %>
        </td>
        <td>
          <% if current_user && book.editable_by?(current_user) %>
              <%= link_to("更新", 
                          edit_book_path(book), 
                          :class => "btn btn-sm btn-default")%>

              <%= link_to("下架", 
                          book_path(book), 
                          :class => "btn btn-sm btn-default", 
                          :method=>:delete,
                          data: { confirm: "Are you sure?" } )%>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <center>
    <%= will_paginate @books, renderer: BootstrapPagination::Rails %>
  </center>
  <br>
</div>
