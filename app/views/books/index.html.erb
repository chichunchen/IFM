<div class="col-md-12">
  <div class="group">
    <%= link_to '我要賣書', new_book_path, :class => "btn btn-primary pull-right" %>
  </div>

  <div id="tag_cloud">
    <% tag_cloud Book.tag_counts, %w[s m l] do |tag, css_class| %>
      <%= link_to tag.name, tag_path(tag.name), class: css_class %>
    <% end %>
  </div>

  <table class="table table-hover">
    <thead> 
      <tr>
        <th>名稱</th>
        <th>物品狀況</th>
        <th>圖片</th>
        <th>價格</th>
        <th>課程標籤</th>
        <th>上架時間</th>
        <th>賣家</th>
        <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td>
         <%= link_to book.name, book_path(book) %>
        </td>
        <td>
          <%= truncate(strip_tags(book.description), :length => 80) %>
        </td>
        <td>
          <%= link_to image_tag(book.picture_url, :width => 120), book_path(book) if book.picture.present? %>
        </td>
        <td> <%= number_to_currency(book.price) %> </td>
        <td>
          <%= raw book.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %>
        </td>
        <td>
          <em> <%= book.updated_at %> </em>
        </td>
        <td>
          <% unless same_author?(book) %>
              <%= order_mail(book) %>
          <br><br>
          <%= link_to( "FB #{User.find(book.user_id).name}", '#' ) %>
          <% else %>
              <%= link_to("更新", 
                          edit_book_path(book), 
                          :class => "btn btn-sm btn-default")%>

              <%= link_to("下架", 
                          book_path(book), 
                          :class => "btn btn-sm btn-default", 
                          :method=>:delete,
                          data: { confirm: "Are you sure?" } )%>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <center>
    分頁
  </center>
  <br>
</div>
