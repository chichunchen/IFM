<div class="col-md-4 col-md-offset-4">
  
  <h1 class="text-center">
  	資財系二手書
  </h1>
  <br>

  <%= render 'layouts/social_section', :title => "I wanna share IFM", :url => "https://www.facebook.com/games/ifmbooks/?fbs=-1&preview=1&locale=zh_TW" %>

  <hr>
  <div class="form-inputs">
  	<% unless user_signed_in? %>
	  	<%= button_to '臉書登入', user_omniauth_authorize_path(:facebook), :class => "btn btn-info btn-lg btn-block", :method => 'get' %>
	  	<br>
	  	<%= button_to '登入', new_user_session_path ,:class => "btn btn-warning btn-lg btn-block", :method => 'get' %>
  	<% else -%>
	  	<%= button_to("買書", books_path, :class => "btn btn-success btn-lg btn-block", :method => 'get') %>
	  	<br>
	  	<%= button_to("賣書", new_book_path, :class => "btn btn-info btn-lg btn-block", :method => 'get') %>
	<% end %>
  </div>

  <hr>
  <div class="panel panel-warning">
	  <div class="panel-heading">
	    <h3 class="panel-title">下一步</h3>
	  </div>
	  <div class="panel-body">
	    增加兩張描述用圖片(optional)
	  </div>
	  <div class="panel-body">
	    提供多選給使用者選tag
	  </div>
	</div>
  <hr>

</div>