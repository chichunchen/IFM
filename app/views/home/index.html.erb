  <%= render 'layouts/social_section', :title => "I wanna share IFM", :url => "https://www.facebook.com/games/ifmbooks/?fbs=-1&preview=1&locale=zh_TW" %>

  <hr>
  <div class="form-inputs">
  	<% unless user_signed_in? %>
